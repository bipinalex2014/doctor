<header>
    <div class="container">

        <div class="row justify-content-center">

            <div class="col-lg-9">
                <form action="/users/signup" method="POST" class="border border-light p-5">

                    <p class="text-center h4 mb-4">Doctors Appointment</p>
                    <div class="row">
                        <label class="mb-2" for="">Name</label>
                        <div class="col-sm">
                            <input type="text" id="" name="fname" class="form-control mb-4" placeholder="First Name" required>
                        </div>
                        <div class="col-sm">
                            <input type="text" id="" name="lname" class="form-control mb-4" placeholder="Last Name" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="mb-3">
                                <label class="mb-2" for="">Gender</label>
                                <select class="form-control" name="gender" id="" required>
                                    <option value="">Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Transgender">Transgender</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="mb-3">
                                <label class="mb-2" for="">Date of Birth</label>
                                <input name="dob" type="datetime-local"
                                    class="flatpickr flatpickr-input form-control active" id="checkin-date" required>

                            </div>

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="mb-3">
                                <label class="mb-2" for="">Age</label>
                                <input name="age" type="text"
                                    class="form-control mb-4" required>

                            </div>

                        </div>
                        
                        <div class="col-lg-6 col-md-6">
                            <div class="mb-3">
                                <label class="mb-2" for="">Phone Number</label>
                                <input name="number" id="phone" type="tel" class="form-control"
                                    placeholder="Your Phone :" required>
                            </div>
                        </div>
                    
                        
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="mb-3">
                                <label class="mb-2" for="">Email</label>
                                <input type="email" id="defaultContactFormEmail" name="email" class="form-control mb-4"
                                    placeholder="E-mail" required>
                            </div>

                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                <input type="password" name="password" class="form-control" id="exampleInputPassword1" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col ">
                            <button type="submit" class="btn btn-primary" style="width: 150px;">Submit</button>

                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</header>